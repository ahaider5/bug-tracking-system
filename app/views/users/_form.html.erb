<%= form_for @user do |f| %>
<p>
  <%= f.label :user_type %><br />
  <%= select("post", "user_type", User.all.collect {|p| [ p.user_type, p.id ] }, {prompt: 'Select User'}) %>
</p>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</p>

<p><%= f.submit %></p>
<% end %>
